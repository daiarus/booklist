<core:FragmentDefinition
   xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
   <Dialog>
      <f:SimpleForm id="idFormUpdate"
            minWidth="1024"
            maxContainerCols="2"
            editable="false"
            layout="ResponsiveGridLayout"
            title="Book"
            labelSpanL="3"
            labelSpanM="3"
            emptySpanL="4"
            emptySpanM="4"
            columnsL="2"
            columnsM="2">
        <f:content>
            <Label text="Person No." />
                <Label text="ISBN" />
                <Input id = "idIsbn"/>

                <Label text="Title" />
                <Input id = "idTitle"/>
             
                <Label text="Author" />
                <Input id = "idAuthor"/>
             
                <Label text="Language" />
                <Input id = "idLanguage"/>
             
                <Label text="Publish Date" />
                <DatePicker id = "idDate"/>

                <Label text="Total Books" />
                <Input id = "idTotalBooks"/>

                <Label text="Available Books" />
                <Input id = "idAvailableBooks"/>
        </f:content>
      </f:SimpleForm>

      <buttons>
        <Button text = "Close" press = "closeDialog" type = "Reject"/>
        <Button text = "Update" press = "onUpdate" type = "Accept"/>
    </buttons>
   </Dialog>
</core:FragmentDefinition>